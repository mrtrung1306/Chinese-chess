        min-width: 120px;
        z-index: 1;
        top: 100%;
        right: 0;
    }

    .dropdown-menu-item {
        padding: 8px 12px;
        text-align: left;
        cursor: pointer;
    }

        .dropdown-menu-item:hover {
            background-color: #0276FF;
            color: #fff;
        }

    .dropdown:hover .dropdown-menu {
        display: block;
    }
