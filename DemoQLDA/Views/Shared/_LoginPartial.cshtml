<div id="user-info" class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="flex-direction: row-reverse">
    <template v-if="userData" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        <div class="dropdown">
            <button class="dropdown-button" @*id="userInput"*@>{{ userName }}</button>
            <div class="nav-item dropdown-menu">
                <div class="nav-link text-dark dropdown-menu-item">Settings</div>
                <div class="nav-link text-dark dropdown-menu-item" v-on:click="logout">Logout</div>
            </div>
        </div>
    </template>
    <template v-else>
        <div>
            <ul class="navbar-nav flex-grow-1" >
                <li class="nav-item">
                    <a class="nav-link text-dark" v-on:click="login">Đăng Nhập</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" v-on:click="register">Đăng Ký</a>
                </li>
            </ul>
        </div>
    </template>
</div>
<div id="default-route-url" data-url="@Url.Action("Login", "Home")"></div>
<style>
